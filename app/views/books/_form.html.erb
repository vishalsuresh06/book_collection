<%= form_with(model: @book, local: true) do |form| %>
    <div>
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
    
    <div>
      <%= form.label :author %>
      <%= form.text_field :author %>
    </div>
  
    <div>
      <%= form.label :price %>
      <%= form.number_field :price, step: 0.01 %>
    </div>
  
    <div>
      <%= form.label :published_date %>
      <%= form.date_field :published_date %>
    </div>
  
    <div>
      <%= form.submit %>
    </div>
  <% end %>
  